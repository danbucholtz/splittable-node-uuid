{
    "angularCompilerOptions": {
        "annotationsAs": "static fields",
        "annotateForClosureCompiler": true
    },
    "compilerOptions": {
        "module": "es2015",
        "moduleResolution": "node",
        "target": "es6",
        "noImplicitAny": false,
        "sourceMap": false,
        "experimentalDecorators": true,
        "outDir": "dist/compiled",
        "declaration": true,
        "types": [
            "systemjs"
        ]
    },
    "exclude": [
        "vendor",
        "node_modules",
        "built",
        "dist"
    ]
}